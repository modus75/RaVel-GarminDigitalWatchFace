<layout id="WatchFace">
    <drawable class="Background" />
    
   
	<drawable id="LeftGoalMeter" class="GoalMeter">
			<param name="side">:left</param>
			<param name="stroke">10</param>
			<param name="height">270</param>
			<param name="separator">3</param>
	</drawable>

	<drawable id="RightGoalMeter" class="GoalMeter">
			<param name="side">:right</param>
			<param name="stroke">10</param>
			<param name="height">270</param>
			<param name="separator">3</param>
	</drawable>

	<drawable id="Time" class="ThickThinTime">
		<param name="adjustY">-20</param>
		<param name="secondsX">270</param>
		<param name="secondsY">300</param>
		<param name="secondsClipWidth">52</param>
		<param name="secondsClipHeight">64</param>

		<param name="topFieldY">64</param>
		<param name="leftFieldAdjustX">8</param>

	</drawable>

</layout>